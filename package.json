{
  "name": "rollup-plugin-generate-image-sizes",
  "version": "0.0.16",
  "description": "Automatically generate image sizes for use in srcsets.",
  "main": "dist/rollup-plugin-generate-image-sizes.cjs.js",
  "jsnext:main": "dist/rollup-plugin-generate-image-sizes.es.js",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "build:cjs": "rollup -c -o dist/rollup-plugin-generate-image-sizes.cjs.js -f cjs",
    "build:es": "rollup -c -o dist/rollup-plugin-generate-image-sizes.es.js -f es",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dkaoster/rollup-plugin-generate-image-sizes.git"
  },
  "author": "Daniel Kao",
  "license": "MIT",
  "keywords": [
    "rollup",
    "image",
    "resize"
  ],
  "bugs": {
    "url": "https://github.com/dkaoster/rollup-plugin-generate-image-sizes/issues"
  },
  "homepage": "https://github.com/dkaoster/rollup-plugin-generate-image-sizes#readme",
  "dependencies": {
    "globby": "11.0.1",
    "jimp": "^0.16.1",
    "promise-queue": "^2.2.5"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3"
  }
}
